{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://liestudio/schemas/workflow_template.json",
  "title": "Workflow template",
  "description": "Workflow template with one meta-data node",
  "type": "object",
  "properties": {
    "project_metadata": {
      "description": "Global metadata for the workflow",
      "type": "object",
      "properties": {
        "create_time": {
          "description": "Workflow specification creation time stamp. W3C PROV UTC dateTime",
          "format": "date-time",
          "type": "string"
        },
        "start_time": {
          "description": "Workflow execution start time stamp. W3C PROV UTC dateTime",
          "format": "date-time",
          "type": "string"
        },
        "update_time": {
          "description": "Workflow status update time stamp. W3C PROV UTC dateTime",
          "format": "date-time",
          "type": "string"
        },
        "finish_time": {
          "description": "Workflow finish time stamp. W3C PROV UTC dateTime",
          "format": "date-time",
          "type": "string"
        },
        "title": {
          "description": "Workflow administrative title",
          "type": "string",
          "default": "MDStudio workflow"
        },
        "description": {
          "description": "Workflow description",
          "type": "string"
        },
        "user": {
          "description": "Workflow user",
          "type": "string"
        },
        "version": {
          "description": "Workflow specification version",
          "type": "string"
        },
        "project_dir": {
          "description": "Storage location of project data",
          "type": "string"
        }
      }
    }
  }
}