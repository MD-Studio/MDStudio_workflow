{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://liestudio/schemas/workflowtask.json",
  "title": "MDStudio WAMP Task",
  "description": "Definitions for running a task in the MDStudio microservice environment",
  "type": "object",
  "properties": {
    "task": {
      "format": "task",
      "required": ["uri"],
      "properties": {
        "task_metadata": {
          "description": "Common task meta-data",
          "$ref": "../resources/task_template.json/#root"
        },
        "uri": {
          "type": "string",
          "description": "LIEStudio microservice method uri",
          "pattern": "^\\w+(\\w+\\.)+\\w+$"
        },
        "group_context": {
          "type": "string",
          "description": "MDStudio WAMP group context",
          "default": "mdgroup"
        }
      }
    }
  }
}